<p id="notice"><%= notice %></p>

<h1>Properties</h1>
<div id="main-container" class="container">
  <div class="row">
    <div class="col-xs-12">
      <ul>
        <% @properties.each do |property| %>
        <li>
          <h3><%= link_to property.title, property %></h3>
          <p><b><%= "Price: $#{property.price}" %></b></p>
          <p><i><%= property.description %></i></p>
          <p><%= "City: #{property.city}" %></p>
          <p><%= "Posted by: #{property.user.name}" %></p>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
